{
  "name": "memodrops-harvester",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json && cp -r public dist/ && mkdir -p dist/db && cp src/db/*.sql dist/db/ && mkdir -p dist/migrations && cp migrations/*.sql dist/migrations/ 2>/dev/null || true",
    "check": "tsc --noEmit",
    "start": "node dist/server.js",
    "run:once": "node dist/jobs/harvest.js",
    "dev": "tsx watch src/server.ts",
    "setup-db": "node setup-db.js",
    "harvest": "tsx src/jobs/harvest.ts"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "openai": "^4.73.0",
    "pg": "^8.11.3",
    "undici": "^6.19.8",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.6",
    "tsx": "^4.16.2",
    "typescript": "^5.6.3"
  }
}
